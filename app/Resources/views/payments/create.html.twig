{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('payment_create') }}" method="post">
                <fieldset>
                    <legend>Create Payment</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="payment_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="payment_name" placeholder="Name" name="payment[name]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            {#<a class="btn btn-default" href="{{ path('hotel_index') }}">Cancel</a>#}
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}