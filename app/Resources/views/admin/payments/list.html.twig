{% extends 'base.html.twig' %}

{% block body %}

<div class="container body-content">
    <div class="well">
        <h2>
            <a href="{{ path('admin_payments') }}">All Payments</a> -
            <a href="{{ path('admin_payment_create') }}" class="btn btn-danger">Create New</a>
        </h2>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for payment in payments %}
                    <tr>
                        <td>{{ payment.id }}</td>
                        <td>{{ payment.name }}</td>
                        <td>
                            <a href="{{ path('admin_payment_edit', {id: payment.id}) }}">Edit</a>
                            <a href="{{ path('admin_payment_delete', {id: payment.id}) }}" onClick="return confirm('Are you sure you want to delete?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}