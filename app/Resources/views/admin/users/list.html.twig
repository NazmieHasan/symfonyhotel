{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <h2><a href="{{ path('admin_users') }}">All Users</a></h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Login Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                        <tr {% if user.isAdmin() %} class="tr-admin" {% endif %}>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.loginName}}</td>
                            <td>
                                <a href="{{ path('admin_user_edit', { 'id': user.id}) }}" {% if user.isAdmin() %} class="td-actions-admin" {% endif %} >Edit</a>
                                <a href="{{ path('admin_user_delete', {id: user.id}) }}" onClick="return confirm('Are you sure you want to delete?')" {% if user.isAdmin() %} class="td-actions-admin" {% endif %} >Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
{% endblock %}