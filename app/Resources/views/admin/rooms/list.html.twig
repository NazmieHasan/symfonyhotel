{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <div class="row find-room">
            <div class="col-md-8">
                <h2>
                    <a href="{{ path('admin_rooms') }}">All Rooms</a> -
                    <a href="{{ path('admin_room_create') }}" class="btn btn-danger">Create New</a>
                </h2>
            </div>
            <div class="col-md-4 text-center">
                <form method="POST">
                    <div class="row">
                        <div class="col-md-7">
                            <input type="text" class="icon-find" name="number" placeholder="&#xF002; Enter room number" />
                            <p>Please, enter 3 digits!</p>
                        </div>
                        <div class="col-md-5">
                            <button type="submit" class="btn btn-danger">Find Room</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Number</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    <tr>
                        <td>{{ room.id }}</td>
                        <td>{{ room.number }}</td>
                        <td>{{ room.category.name }}</td>
                        <td>
                            <a class="text-success" href="{{ path('admin_room_view', {id: room.id}) }}" target=_blank>View</a>
                            <a class="text-primary" href="{{ path('admin_room_edit', {id: room.id}) }}" target=_blank>Edit</a>
                            <a href="{{ path('admin_room_delete', {id: room.id}) }}" onClick="return confirm('Are you sure you want to delete room with number {{ room.number }} ?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}