{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <div class="well">
            <form class="form-horizontal" action="{{ path('admin_room_delete', {'id': room.id}) }}"  method="POST">
                <fieldset>
                    <legend>Delete Room</legend>
                    
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="room_number">Number</label>
                        <div class="col-sm-6">
                            <input type="number" class="form-control" id="room_number" placeholder="Number" name="room[number]" value="{{ room.number }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="room_category">Category</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.category) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('admin_rooms') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </div>
                    
                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
    
{% endblock %}