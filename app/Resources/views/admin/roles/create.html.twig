{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <form class="form-horizontal" action="{{ path('admin_role_create') }}" method="post">
                    <fieldset>
                        <legend>Create Role</legend>
                        <div class="form-group">
                            <label class="col-sm-12 control-label" for="role_name">Name</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="role_name" placeholder="Name" name="role[name]" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <a class="cancel-a" href="{{ path('admin_roles') }}">Cancel</a>
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>
                        </div>
                        {{ form_row(form._token) }}
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    
{% endblock %}
