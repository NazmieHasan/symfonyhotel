{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <h2><a href="{{ path('admin_stays') }}">All Stays</a></h2>
        {% if stays|length == 0 %} 
            <h4 class="text-center mt-5">Not found result!</h4>
            <h4 class="text-center mb-5">Please, try again!</h4>
        {% else %} 
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Booking</th>
                    <th>Room Number</th>
                    <th>Guest</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stay in stays %}
                    <tr>
                        <td>{{ stay.id }}</td>
                        <td><a href="{{ path('admin_booking_view', {id: stay.booking.id}) }}">{{ stay.booking }}</a></td>
                        <td><a href="{{ path('admin_room_view', {id: stay.room.id}) }}">{{ stay.room }}</a></td>
                        <td><a href="{{ path('admin_guest_view', {id: stay.guest.id}) }}">{{ stay.guest }}</a></td>
                        <td>
                            <a href="{{ path('admin_stay_view', {id: stay.id}) }}" target=_blank>View</a>
                            <a href="{{ path('admin_stay_edit', {id: stay.id}) }}" target=_blank>Edit</a>
                            <a href="{{ path('admin_stay_delete', {id: stay.id}) }}" onClick="return confirm('Are you sure you want to delete?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </div>

{% endblock %}