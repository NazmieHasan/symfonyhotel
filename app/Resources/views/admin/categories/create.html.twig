{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('admin_category_create') }}" method="post">
                <fieldset>
                    <legend>Create Category</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="category_name" placeholder="Name" name="category[name]" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_description">Description</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="category_description" placeholder="Description" name="category[description]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_beds">Beds</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="category_beds" placeholder="Beds" name="category[beds]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_price">Price</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="category_price" placeholder="Price" name="category[price]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_image">Upload Image</label>
                        <div class="col-sm-4 ">
                            <input accept=".jpg, .jpeg" type="file" class="form-control" id="category_image" placeholder="Upload Image" name="category[image]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-primary" href="{{ path('admin_categories') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
    
{% endblock %}