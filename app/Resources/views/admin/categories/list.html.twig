{% extends 'base.html.twig' %}

{% block body %}

<div class="container body-content">
    <div class="well">
        <h2>
            <a href="{{ path('admin_categories') }}">All Categories</a> -
            <a href="{{ path('admin_category_create') }}" class="btn btn-danger">Create New</a>
        </h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Beds</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.beds }}</td>
                        <td>{{ category.price }}</td>
                        <td>
                            <a class="text-success" href="{{ path('admin_category_view', {id: category.id}) }}" target=_blank>View</a>
                            <a class="text-primary" href="{{ path('admin_category_edit', {id: category.id}) }}" target=_blank>Edit</a>
                            <a href="{{ path('admin_category_delete', {id: category.id}) }}" onClick="return confirm('Are you sure you want to delete category {{ category.name }} ?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}