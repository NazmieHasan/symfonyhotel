{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('admin_booking_delete', {id: booking.id}) }}" method="post">
                <fieldset>
                    <legend>Delete Booking</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking category">Category</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.category, { 'attr':{'disabled':'disabled'}}) }}
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_checkin">Checkin</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="booking_checkin"  name="booking[checkin]"  value="{{ booking.checkin|date("Y-m-d H:i:s") }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_checkout">Checkout</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="booking_checkout"  name="booking[checkout]"  value="{{ booking.checkout|date("Y-m-d H:i:s")}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_days">Days</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_days"  name="booking[days]" value="{{ booking.days}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_adults">Adults</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_adults"  name="booking[adults]" value="{{ booking.adults}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_adults">Child Bed</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_childBed"  name="booking[childBed]" value="{{ booking.childBed}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_totalAmount">Total Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_totalAmount"  name="booking[totalAmount]" value="{{ booking.totalAmount}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_payment">Payment</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.payment, { 'attr':{'disabled':'disabled'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_paidAmount">Paid Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_paidAmount"  name="booking[paidAmount]" value="{{ booking.paidAmount}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_paymentAmount">Payment Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_paymentAmount"  name="booking[paymentAmount]" value="{{ booking.paymentAmount}}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_status">Status</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.status, { 'attr':{'disabled':'disabled'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-primary" href="{{ path('admin_bookings') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </div>
                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

