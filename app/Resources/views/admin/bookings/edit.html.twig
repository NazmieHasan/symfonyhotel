{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <div class="well">
            <form class="form-horizontal" action="{{ path('admin_booking_edit', {id: booking.id}) }}" method="post">
                <fieldset>
                    <legend>Edit Booking</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_category">Category</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.category) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_checkin">Checkin</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="booking_checkin"  name="booking[checkin]"  value="{{ booking.checkin|date("Y-m-d") }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_checkout">Checkout</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="booking_checkout"  name="booking[checkout]"  value="{{ booking.checkout|date("Y-m-d")}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_days">Days</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_days"  name="booking[days]" value="{{ booking.days}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_adults">Adults</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_adults"  name="booking[adults]" value="{{ booking.adults}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_adults">Child Bed</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_childBed"  name="booking[childBed]" value="{{ booking.childBed}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_totalAmount">Total Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_totalAmount"  name="booking[totalAmount]" value="{{ booking.totalAmount}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_payment">Payment</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.payment) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_paidAmount">Paid Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_paidAmount"  name="booking[paidAmount]" value="{{ booking.paidAmount}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_paymentAmount">Payment Amount</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="booking_paymentAmount"  name="booking[paymentAmount]" value="{{ booking.paymentAmount}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="booking_status">Status</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.status) }}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-primary" href="{{ path('admin_bookings') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </div>
                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

