{% extends 'base.html.twig' %}

{% block body %}

<div class="container body-content">
    <div class="well">
        <h2>
            <a href="{{ path('admin_statuses') }}">All Statuses</a> -
            <a href="{{ path('admin_status_create') }}" class="btn btn-danger">Create New</a>
        </h2>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for status in statuses %}
                    <tr>
                        <td>{{ status.id }}</td>
                        <td>{{ status.name }}</td>
                        <td>
                            <a class="text-primary" href="{{ path('admin_status_edit', {id: status.id}) }}">Edit</a>
                            <a href="{{ path('admin_status_delete', {id: status.id}) }}" onClick="return confirm('Are you sure you want to delete status {{ status.name }} ?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}