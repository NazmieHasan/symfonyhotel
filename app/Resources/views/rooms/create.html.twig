{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('room_create') }}" method="post">
                <fieldset>
                    <legend>Create Room</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="room_number">Number</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="room_bed" placeholder="Number" name="room[number]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_category">Category</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.category) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            {#<a class="btn btn-default" href="{{ path('hotel_index') }}">Cancel</a>#}
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>



                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}