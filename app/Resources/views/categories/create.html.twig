{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('category_create') }}" method="post">
                <fieldset>
                    <legend>Create Category</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="category_name" placeholder="Name" name="category[name]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_beds">Beds</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="category_beds" placeholder="Beds" name="category[beds]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_price">Price</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="category_price" placeholder="Price" name="category[price]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            {#<a class="btn btn-default" href="{{ path('hotel_index') }}">Cancel</a>#}
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}