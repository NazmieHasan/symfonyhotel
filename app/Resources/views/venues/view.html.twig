{% extends 'base.html.twig' %}

{% block body %}

    <section class="venues venues-width header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1 class="header-title text-center">Venues</h1>
                </div>
            </div>
        </div>
    </section>
    <div class="container venue text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 venues-img">
                <img src="img/outdoor-restaurant.jpg" alt="img" class="img-thumbnail">
            </div>
            <div class="col-md-6 col-sm-12 venues-text">
                <div class="venues-info">
                    <h3>OUTDOOR RESTAURANT</h3>
                    <hr />
                    <p>The restaurant has 150 seats. Welcome!</p>
                    <h5>Breakfast: 07:30 - 10:30</h5>
                    <h5>Lunch: 12:30 - 14:30</h5>
                    <h5>Dinner: 18:30 - 21:30</h5>
                </div>
            </div>
        </div>
    </div> 
    <div class="container venue text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 venues-text">
                <div class="venues-info">
                    <h3>RESTAURANT</h3>
                    <hr />
                    <p>The restaurant has 300 seats. Welcome!</p>
                    <h5>Breakfast: 07:30 - 10:30</h5>
                    <h5>Lunch: 12:30 - 14:30</h5>
                    <h5>Dinner: 18:30 - 21:30</h5>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 venues-img">
                <img src="img/restaurant.jpg" alt="img" class="img-thumbnail">    
            </div>
        </div>
    </div> 
    <div class="container-fluid cont-venues text-center">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h1>Cafe and bar</h1>
            </div>
        </div>
    </div>            
    <div class="container venue text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 venues-img">
                <img src="img/cafe.jpg" alt="img" class="img-thumbnail">
            </div>
            <div class="col-md-6 col-sm-12 venues-text">
                <div class="venues-info">
                    <h3>CAFE</h3>
                    <hr />
                    <p>It offers a variety of drinks, cocktails and pastries.</p>
                    <p>The cafe has 100 seats. Welcome!</p>
                    <h5>Work time: 07:00 - 21:00</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="container venue text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 venues-text">
                <div class="venues-info">
                    <h3>BAR</h3>
                    <hr />
                    <p>It offers a variety of drinks, cocktails and pastries.</p>
                    <p>The bar has 100 seats. Welcome!</p>
                    <h5>Work time: 10:30 - 23:30</h5>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 venues-img">
                <img src="img/bar.jpg" alt="img" class="img-thumbnail">
            </div>
        </div>
    </div> 
    
{% endblock %}