{% extends 'base.html.twig' %}

{% block body %}



    <div class="container body-content">
        <div class="row">

            {% for msg in app.session.flashbag.get('info')  %}
                <div class="alert alert-success" id="info">
                    {{ msg }}
                </div>
            {% endfor %}

            {% for category in categories %}
                <div class="col-md-6">
                    <article>
                        <header>

                        </header>
                        <div>
                            {{ category.name }} ${{ category.price }} <br />
                            <p><a class="btn btn-success btn-xs" href="{{ path('booking_create') }}">BOOKING</a></p>
                            <img src="{{ category.imageURL }}" width="500px" height="350px">
                            </a><br /><br /><br />
                        </div>

                        <footer>

                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}

