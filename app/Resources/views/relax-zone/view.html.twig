{% extends 'base.html.twig' %}

{% block body %}

    <section class="spa-center spa-center-width header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1 class="header-title text-center">Relax Zone</h1>
                </div>
            </div>
        </div>
    </section>
    <div class="container spa-center-zone text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 spa-center-img">
                <img src="img/sauna.jpg" alt="img" class="img-thumbnail">
            </div>
            <div class="col-md-6 col-sm-12 spa-center-text">
                <div class="spa-center-info">
                    <h3>SAUNA & AROMA SAUNA</h3>
                    <hr />
                    <p>The sauna is the ideal remedy against daily stress.</p>
                    <p>WELCOME!</p>
                    <h5>Work time: 09:00 - 21:00</h5>
                </div>
            </div>
        </div>
    </div> 
    <div class="container spa-center-zone text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 spa-center-text">
                <div class="spa-center-info">
                    <h3>FACIAL SPA THERAPIES</h3>
                    <hr />
                    <p>Facial therapies - hydration, lifting and shine</p>
                    <p>WELCOME!</p>
                    <h5>Work time: 10:00 - 20:00</h5>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 spa-center-img">
                <img src="img/facial-spa-therapy.jpg" alt="img" class="img-thumbnail">
            </div>
        </div>
    </div>
    <div class="container-fluid cont-spa text-center">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h1>Sauna and pools</h1>
            </div>
        </div>
    </div>             
    <div class="container spa-center-zone text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 spa-center-img">
                <img src="img/pool.jpg" alt="img" class="img-thumbnail">
            </div>
            <div class="col-md-6 col-sm-12 spa-center-text">
                <div class="spa-center-info">
                    <h3>INSIDE SWIMMING POOL</h3>
                    <hr />
                    <p>The area is 100 sq.m and the depth is 2.00 m.</p>
                    <p>WELCOME!</p>
                    <h5>Work time: 08:00 - 20:00</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="container spa-center-zone text-center">
        <div class="row">
            <div class="col-md-6 col-sm-12 spa-center-text">
                <div class="spa-center-info">
                    <h3>CHILDREN'S POOL</h3>
                    <hr />
                    <p>The area is 70 sq.m and the depth is 1.00 m.</p>
                    <p>WELCOME!</p>
                    <h5>Work time: 08:00 - 20:00</h5>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 spa-center-img">
                <img src="img/pool-child.jpg" alt="img" class="img-thumbnail">
            </div>
        </div>
    </div>    
    
{% endblock %}